---
interface Props {
	title: string;
}

const { title } = Astro.props;

import "../base.css";

import SecondaryNavigation from "../components/SecondaryNavigation.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Starring chipotles in adobo and backed by a supporting cast of Mexico's finest chilies, Antonito's Pepper Company offers the finest hot sauce and chili powder this side of the astroid belt." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="min-h-screen flex flex-col">
		<SecondaryNavigation />

		<main class="bg-gray-50 flex-grow flex flex-col">
			<slot />
		</main>

		<Footer />
	</body>
</html>
